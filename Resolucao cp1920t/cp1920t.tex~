\column{53E}{@{}l@{}}%
\column{56}{@{}>{\hspre}l<{\hspost}@{}}%
\column{60}{@{}>{\hspre}c<{\hspost}@{}}%
\column{60E}{@{}l@{}}%
\column{63}{@{}>{\hspre}l<{\hspost}@{}}%
\column{64}{@{}>{\hspre}c<{\hspost}@{}}%
\column{64E}{@{}l@{}}%
\column{67}{@{}>{\hspre}l<{\hspost}@{}}%
\column{70}{@{}>{\hspre}l<{\hspost}@{}}%
\column{80}{@{}>{\hspre}l<{\hspost}@{}}%
\column{81}{@{}>{\hspre}l<{\hspost}@{}}%
\column{96}{@{}>{\hspre}l<{\hspost}@{}}%
\column{98}{@{}>{\hspre}l<{\hspost}@{}}%
\column{E}{@{}>{\hspre}l<{\hspost}@{}}%
\>[B]{}\Varid{dic\char95 in}\;\Varid{p}\;\Varid{t}\;\Varid{dici}\mathrel{=}\mathbf{if}\;(\Varid{exists}\;\Varid{t}\;(\Varid{dic\char95 rd}\;\Varid{p}\;\Varid{dici}))\;\mathbf{then}\;\Varid{dici}\;\mathbf{else}\;\Varid{anaExp}\;\Varid{dic\char95 in\char95 AnaGen}\;(\Varid{dici},(\Varid{p},\Varid{t},\Conid{True})){}\<[E]%
\\
\>[B]{}\hsindent{16}{}\<[16]%
\>[16]{}\mathbf{where}\;\Varid{exists}\;\anonymous \;\Conid{Nothing}\mathrel{=}\Conid{False}{}\<[E]%
\\
\>[16]{}\hsindent{6}{}\<[22]%
\>[22]{}\Varid{exists}\;\Varid{o}\;(\Conid{Just}\;\Varid{x})\mathrel{=}\Varid{elem}\;\Varid{o}\;\Varid{x}{}\<[E]%
\\[\blanklineskip]%
\>[B]{}\Varid{dic\char95 in\char95 AnaGen}\;(\Conid{Var}\;\Varid{a},(\anonymous ,\anonymous ,\Conid{False}))\mathrel{=}i_1{}\<[44]%
\>[44]{}\mbox{\onelinecomment 1 }{}\<[E]%
\\
\>[B]{}\Varid{dic\char95 in\char95 AnaGen}\;(\Conid{Var}\;\Varid{a},(\Varid{p},\Varid{t},\anonymous ))\mathrel{=}\mathbf{if}\;(\Varid{p}\equiv \text{\ttfamily \char34 \char34}){}\<[E]%
\\
\>[B]{}\hsindent{9}{}\<[9]%
\>[9]{}\mathbf{then}\;i_2\;(\text{\ttfamily \char34 \char34},[\mskip1.5mu (\Conid{Var}\;\Varid{a},(\text{\ttfamily \char34 \char34},\text{\ttfamily \char34 \char34},\Conid{False})),(\Conid{Var}\;\Varid{t},(\text{\ttfamily \char34 \char34},\text{\ttfamily \char34 \char34},\Conid{False}))\mskip1.5mu]){}\<[81]%
\>[81]{}\mbox{\onelinecomment 2}{}\<[E]%
\\
\>[B]{}\hsindent{9}{}\<[9]%
\>[9]{}\mathbf{else}\;i_2\;(\text{\ttfamily \char34 \char34},[\mskip1.5mu (\Conid{Var}\;\Varid{a},(\text{\ttfamily \char34 \char34},\text{\ttfamily \char34 \char34},\Conid{False})),(\Conid{Term}\;\Varid{p}\;[\mskip1.5mu \Conid{Var}\;\Varid{t}\mskip1.5mu],(\text{\ttfamily \char34 \char34},\text{\ttfamily \char34 \char34},\Conid{False}))\mskip1.5mu]){}\<[81]%
\>[81]{}\mbox{\onelinecomment 3}{}\<[E]%
\\[\blanklineskip]%
\>[B]{}\Varid{dic\char95 in\char95 AnaGen}\;(\Conid{Term}\;\Varid{j}\;\Varid{n},(\anonymous ,\anonymous ,\Conid{False}))\mathrel{=}i_2\;(\Varid{j},[\mskip1.5mu (\Varid{o},(\text{\ttfamily \char34 \char34},\text{\ttfamily \char34 \char34},\Conid{False}))\mid \Varid{o}\leftarrow \Varid{n}\mskip1.5mu]){}\<[81]%
