\column{E}{@{}>{\hspre}l<{\hspost}@{}}%
\>[B]{}\Varid{getTrueProb}\mathrel{=}\Varid{cataList}\;\Varid{g}\mbox{\onelinecomment  4}{}\<[E]%
\\
\>[B]{}\hsindent{7}{}\<[7]%
\>[7]{}\mathbf{where}\;\Varid{g}\mathrel{=}\alt{\Varid{g1}}{\Varid{g2}}{}\<[E]%
\\
\>[7]{}\hsindent{6}{}\<[13]%
\>[13]{}\Varid{g1}\;\anonymous \mathrel{=}\mathrm{0.0}{}\<[E]%
\\
\>[7]{}\hsindent{6}{}\<[13]%
\>[13]{}\Varid{g2}\;((\Varid{j},\Varid{n}),\Varid{o})\mathrel{=}\mathbf{if}\;(\Varid{j})\;\mathbf{then}\;\Varid{n}\;\mathbf{else}\;\Varid{o}{}\<[E]%
\\[\blanklineskip]%
\>[B]{}\Varid{getFalseProb}\mathrel{=}\Varid{cataList}\;\Varid{g}\mbox{\onelinecomment 5}{}\<[E]%
