\>[5]{}\hsindent{10}{}\<[15]%
\>[15]{}\Varid{genExp}\;\Varid{n}\mathrel{=}\Varid{oneof}\;[\mskip1.5mu \Varid{liftM}\;(\Varid{inExp}\comp i_2\comp (\lambda \Varid{a}\to (\Varid{a},[\mskip1.5mu \mskip1.5mu])))\;\Varid{\Conid{QuickCheck}.arbitrary},{}\<[E]%
\\
\>[15]{}\hsindent{11}{}\<[26]%
