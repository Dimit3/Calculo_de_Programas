\>[13]{}\Varid{g1}\;\anonymous \mathrel{=}\mathrm{0.0}{}\<[E]%
\\
\>[7]{}\hsindent{6}{}\<[13]%
\>[13]{}\Varid{g2}\;((\Varid{j},\Varid{n}),\Varid{o})\mathrel{=}\mathbf{if}\;(\neg \;\Varid{j})\;\mathbf{then}\;\Varid{n}\;\mathbf{else}\;\Varid{o}{}\<[E]%
\\[\blanklineskip]%
\>[B]{}\Varid{distProb}\;(\Varid{x},\Varid{y})\mathrel{=}\map \;(\Varid{id}\times(\mathbin{*}\Varid{y}))\;\Varid{x}\mbox{\onelinecomment 6}{}\<[E]%
\\[\blanklineskip]%
\>[B]{}\Varid{collectProb}\;\Varid{x}\mathrel{=}\Varid{set}\;[\mskip1.5mu \Varid{k}\mapsto[\mskip1.5mu \Varid{d'}\mid (\Varid{k'},\Varid{d'})\leftarrow \Varid{x},\Varid{k'}\equiv \Varid{k}\mskip1.5mu]\mid (\Varid{k},\Varid{d})\leftarrow \Varid{x}\mskip1.5mu]\mbox{\onelinecomment 7}{}\<[E]%
\ColumnHook
\end{hscode}\resethooks
